<Page x:Class="AeraCalc.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainPage" Height="450" Width="800">
    <Grid>
        <!-- 页面内容 -->
        <Label x:Name="tittle" Content="面积计算器" HorizontalAlignment="Center" Height="60" Margin="0,50,0,0" VerticalAlignment="Top" Width="204" FontSize="36"/>
        <Button Content="正方形" Click="GoToSquare_Click" HorizontalAlignment="Left" Height="40" Margin="100,200,0,0" VerticalAlignment="Top" Width="150"/>
        <Button Content="长方形" Click="GoToRect_Click" HorizontalAlignment="Left" Height="40" Margin="500,200,0,0" VerticalAlignment="Top" Width="150"/>
        <Button Content="圆形" Click="GoToCircle_Click" HorizontalAlignment="Left" Height="40" Margin="100,300,0,0" VerticalAlignment="Top" Width="150"/>
        <Button Content="三角形" Click="GoToTrig_Click" HorizontalAlignment="Left" Height="40" Margin="500,300,0,0" VerticalAlignment="Top" Width="150"/>
        <Label Content="点击选择你要计算的的图形形状：" HorizontalAlignment="Left" Height="34" Margin="100,136,0,0" VerticalAlignment="Top" Width="300" FontSize="16"/>

    </Grid>
</Page>
